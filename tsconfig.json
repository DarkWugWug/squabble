{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
    "baseUrl": "./",
    "paths": {
      // NOTE: When updates happen here they should also happen in the ./vite.config.js
      "$components/*": ["./src/components/*"], // Note the '/*' at the ends!
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"]
    },
	},
  "include": [
    "./src/**/*"
  ]
}
